{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build for debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-GNinja", "-DCMAKE_BUILD_TYPE=Debug", "-DCMAKE_TOOLCHAIN_FILE=${workspaceRoot}/cmake/stm32.cmake", "-Sbare", "-Bbuild",
                "&&",
                "cmake", "--build", "build"
            ],
            "problemMatcher": []
        },
        {
            "label": "build for release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-GNinja", "-DCMAKE_BUILD_TYPE=Release", "-DCMAKE_TOOLCHAIN_FILE=${workspaceRoot}/cmake/stm32.cmake", "-Sbare", "-Bbuild",
                "&&",
                "cmake", "--build", "build"
            ],
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "cmake",
            "args": ["-E", "remove_directory", "build" ],
            "problemMatcher": []
        }
    ]
}