{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "config",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-GNinja",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_TOOLCHAIN_FILE=${workspaceRoot}/cmake/stm32.cmake",
                "-Sbare",
                "-Bbuild"
            ],
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "dependsOn": "config",
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-E",
                "remove_directory",
                "build"
            ],
            "problemMatcher": []
        }
    ]
}